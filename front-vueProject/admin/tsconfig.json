{
    "compilerOptions": {
        "importHelpers": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "lib": ["es6",
            "dom",
            "dom.iterable",
            "esnext"]
    },
    "include": [
        "./src/**/*"
    ],
    "allowSyntheticDefaultImports": true
}